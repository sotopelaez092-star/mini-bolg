# ======================
# 🚀 应用配置
# ======================
PROJECT_NAME="FastAPI Mini Blog"
VERSION="0.1.0"
API_V1_STR="/api/v1"

# ======================
# 🗄️ 数据库配置（使用 Supabase）
# ======================
# SUPABASE_URL=https://你的项目ID.supabase.co
# SUPABASE_KEY=你的Service_Role_Key
# ipv4连接
DATABASE_URL=postgresql+psycopg2://postgres.用户名:数据库密码@db.你的项目ID.supabase.co:5432/postgres
DATABASE_POOLER_HOST=db.你的项目ID.supabase.co
DATABASE_POOLER_PORT=6543
DATABASE_USER=postgres.用户名
DATABASE_PASSWORD=数据库密码
DATABASE_NAME=postgres

# ======================
# 🔐 安全配置
# ======================
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ======================
# 🌐 CORS 配置
# ======================
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ======================
# ⚙️ 环境配置
# ======================
ENVIRONMENT=development
